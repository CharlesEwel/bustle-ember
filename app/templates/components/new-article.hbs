{{#if addNewArticle}}
  <h1>New Article</h1>
  <form>
    <div class="form-group">
      <label for="headline">Headline</label>
      {{input value=headline id="headline"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>
    <button{{action 'save1'}}>Save</button>
  </form>
  {{else}}
    <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
