{{#if editArticleForm}}
  <h4>Edit {{article.headline}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" placeholder=article.headline}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input type="textarea" value=content id="content" placeholder=article.content}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=article.author}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=article.image}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          {{input value=category id="category" placeholder=article.category}}
        </div>

        <button {{action 'edit' article}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'editArticleForm'}}>Edit</button>
{{/if}}
