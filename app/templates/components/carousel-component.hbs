{{#carousel-container id="carousel-container" transition-interval=400}}
  {{#carousel-body}}
    {{#each articles as |article|}}
    {{#carousel-item}}
      <img src={{article.image}} alt={{article.headline}} height=764px />
    {{/carousel-item}}
    {{/each}}
  {{/carousel-body}}


  {{#carousel-arrow id="left-carousel-arrow" direction="left" tagName="button"}}
    Slide Left
  {{/carousel-arrow}}
  {{#carousel-arrow id="right-carousel-arrow" direction="right" tagName="button"}}
    Slide Right
  {{/carousel-arrow}}
{{/carousel-container}}
